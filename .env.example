# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Use local models instead (no API key needed)
# Set USE_LOCAL_MODEL=true to use local embeddings and LLM
USE_LOCAL_MODEL=false

# ChromaDB settings
CHROMA_DB_PATH=./vectordb

# Streamlit settings
STREAMLIT_SERVER_PORT=8501

# NetDocuments Integration (Optional)
# Set to true to enable NetDocuments integration
NETDOCUMENTS_ENABLED=false

# NetDocuments API Credentials (required if NETDOCUMENTS_ENABLED=true)
# Get these from the NetDocuments Developer Portal
NETDOCUMENTS_CLIENT_ID=your_netdocuments_client_id
NETDOCUMENTS_CLIENT_SECRET=your_netdocuments_client_secret
NETDOCUMENTS_REDIRECT_URI=https://localhost:3000/gettoken